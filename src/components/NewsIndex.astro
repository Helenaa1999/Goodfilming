---
import News from "./News.astro"

import { getNews } from "../lib/api/news";
const news = await getNews();
---
<!--Componente del apartado noticias del index -->
<a href="/newsPage" class="headings">Noticias:</a>
<article class="newsIndexContainer">
    <div class="newsGrid">
        {
            //Se realiza un map para poder mostrar cada una de las noticias. 
            // Slice sirve para que determinar cuántas noticias se quieren mostrar. En este caso máximo 10
            news.slice(0,10).map(newsItem => 
                <News newsIndividual={newsItem} class="news-item" /> )
        }
    </div>
    <a href="/newsPage" class="linkPage">➕ Pulsa para ver más noticias</a>
</article>